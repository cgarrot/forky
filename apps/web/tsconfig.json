{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@forky/app-ui": ["../../packages/app-ui/src"],
      "@forky/ui": ["../../packages/ui-kit/src"],
      "@forky/ui/atoms/*": ["../../packages/ui-kit/src/atoms/*"],
      "@forky/ui/molecules/*": ["../../packages/ui-kit/src/molecules/*"],
      "@forky/ui/organisms/*": ["../../packages/ui-kit/src/organisms/*"],
      "@forky/ui/templates/*": ["../../packages/ui-kit/src/templates/*"],
      "@forky/state": ["../../packages/state/src"],
      "@forky/client-api": ["../../packages/client-api/src"],
      "@forky/shared-core": ["../../packages/shared-core/src"],
      "@forky/shared-core/types": ["../../packages/shared-core/src/types"],
      "@forky/shared-core/constants": ["../../packages/shared-core/src/constants"],
      "@forky/shared-core/utils": ["../../packages/shared-core/src/utils"],
      "@forky/shared-core/graph": ["../../packages/shared-core/src/graph"],
      "@forky/shared-core/validation": ["../../packages/shared-core/src/validation"],
      "@forky/shared-ui": ["../../packages/shared-ui/src"],
      "@forky/shared-ui/*": ["../../packages/shared-ui/src/*"],
      "@forky/config": ["../../packages/config/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
