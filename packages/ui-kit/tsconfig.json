{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@forky/shared-core": ["../shared-core/src"],
      "@forky/shared-core/*": ["../shared-core/src/*"],
      "@forky/shared-ui": ["../shared-ui/src"],
      "@forky/shared-ui/*": ["../shared-ui/src/*"]
    }
  },
  "include": ["src/**/*"]
}
