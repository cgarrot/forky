{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@forky/shared-core": ["../shared-core/src"],
      "@forky/shared-core/*": ["../shared-core/src/*"],
      "@forky/shared-ui": ["../shared-ui/src"],
      "@forky/shared-ui/*": ["../shared-ui/src/*"],
      "@forky/state": ["../state/src"],
      "@forky/state/*": ["../state/src/*"],
      "@forky/ui": ["../ui-kit/src"],
      "@forky/ui/*": ["../ui-kit/src/*"],
      "@forky/client-api": ["../client-api/src"],
      "@forky/client-api/*": ["../client-api/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".storybook"]
}
